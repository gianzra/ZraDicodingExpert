<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.gianzra.expert.submission.MyApplication"

        android:allowBackup="false"
        android:icon="@mipmap/ic_zramovie"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_zramovie_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MadeSubmission"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name="com.gianzra.expert.submission.detail.DetailActivity" />
        <activity android:name="com.gianzra.expert.submission.home.HomeActivity" />
        <activity
            android:name="com.gianzra.expert.submission.splashscreen.SplashScreenActivity"
            android:theme="@style/SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>